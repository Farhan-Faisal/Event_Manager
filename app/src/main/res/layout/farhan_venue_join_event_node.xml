<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="32dp">
joinE
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/joinEventTitleid"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Venue Name"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/joinEventVenueid"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="No Participants"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/joinEventCountid"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/joinEventDateid"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Space available"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/joinEventSpaceid"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/joinEventTimeid"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Event"
            android:textSize="20dp"
            android:id="@+id/joinEventButtonid"
            />
    </LinearLayout>
</LinearLayout>