<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue Title"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/venueNodeTitleid"
            />

        <TextView
            android:id="@+id/venueNodeLocationid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Location"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/venueNodeSportsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Available Sports"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Schedule Event"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/venueNodeScheduleButtonid"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Join an Event"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/venueNodeJoinButtonid"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>